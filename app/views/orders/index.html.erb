<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Driver</th>
      <th>Service type</th>
      <th>Transport type</th>
      <th>Reservation</th>
      <th>Direction</th>
      <th>Pickup address</th>
      <th>Pickup contact</th>
      <th>Delivery address</th>
      <th>Delivery contact</th>
      <th>Transit time</th>
      <th>Booking deposit</th>
      <th>Balance on delivery</th>
      <th>Grand total</th>
      <th>Tax</th>
      <th>Year make model</th>
      <th>Color</th>
      <th>Vin</th>
      <th>Plate</th>
      <th>Condition</th>
      <th>Estimated pickup date</th>
      <th>Driver pay</th>
      <th>Security question</th>
      <th>Security password</th>
      <th>Shipping from province</th>
      <th>Shipping from city</th>
      <th>Shipping to province</th>
      <th>Shipping to city</th>
      <th>Notes</th>
      <th>No runner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer %></td>
        <td><%= order.driver %></td>
        <td><%= order.service_type %></td>
        <td><%= order.transport_type %></td>
        <td><%= order.reservation %></td>
        <td><%= order.direction %></td>
        <td><%= order.pickup_address %></td>
        <td><%= order.pickup_contact %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.delivery_contact %></td>
        <td><%= order.transit_time %></td>
        <td><%= order.booking_deposit %></td>
        <td><%= order.balance_on_delivery %></td>
        <td><%= order.grand_total %></td>
        <td><%= order.tax %></td>
        <td><%= order.year_make_model %></td>
        <td><%= order.color %></td>
        <td><%= order.vin %></td>
        <td><%= order.plate %></td>
        <td><%= order.condition %></td>
        <td><%= order.estimated_pickup_date %></td>
        <td><%= order.driver_pay %></td>
        <td><%= order.security_question %></td>
        <td><%= order.security_password %></td>
        <td><%= order.shipping_from_province %></td>
        <td><%= order.shipping_from_city %></td>
        <td><%= order.shipping_to_province %></td>
        <td><%= order.shipping_to_city %></td>
        <td><%= order.notes %></td>
        <td><%= order.no_runner %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

