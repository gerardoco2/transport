<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Province from</th>
      <th>City from</th>
      <th>Province to</th>
      <th>City to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.driver %></td>
        <td><%= route.province_from %></td>
        <td><%= route.city_from %></td>
        <td><%= route.province_to %></td>
        <td><%= route.city_to %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

