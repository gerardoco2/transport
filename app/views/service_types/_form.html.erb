<div class="container">
  <div class="row">
  <div class="col-md-10">
    <div class="wrapper wrapper-content animated fadeInRight">
      
      <div class="ibox-content">

        <%= form_with(model: service_type, local: true) do |form| %>
          <% if service_type.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(service_type.errors.count, "error") %> prohibited this service_type from being saved:</h2>

              <ul>
              <% service_type.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, id: :service_type_name, :class=>"form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, id: :service_type_description, :class=>"form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :status %>
            <%= form.text_field :status, id: :service_type_status , :class=>"form-control"%>
          </div>

          <div class="form-group">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>  
</div>
