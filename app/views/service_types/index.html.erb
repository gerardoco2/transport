
<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Services</h2> 
  </div>
  <div class="col-lg-4">
  <div class="title-action"  style="color: white;">
    <%= link_to 'New Service', new_service_type_path, :class =>"btn btn-primary" %>
  </div>
  </div>
</div>


<style>
    label{

        display: block;
        float: right;
        margin-bottom: 20px;
        font-weight: 700;
        }
        #DataTables_Table_0_info{
          display: none;
          
        }
</style>

        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
              <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Services currently being offered</h5>                       
                    </div>
                  <div class="ibox-content">
                      <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Description</th>
                              <th>Status</th>
                              
                            </tr>
                          </thead>
                          <tbody>
                             <% @service_types.each do |service_type| %>
                                <tr>
                                  <td><%= service_type.name %></td>
                                  <td><%= service_type.description %></td>
                                  <td><%= service_type.status %></td>
                              
                                  
                                </tr>
                              <% end %>
                          </tbody>
                          <tfoot>
                            <tr>
                              <th>Name</th>
                              <th>Description</th>
                              <th>Status</th>
                              
                            </tr>
                          </tfoot>
                        </table>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>



          <script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'Services List', header: true},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });

        });

    </script>

