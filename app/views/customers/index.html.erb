    </ol>
  </div>
  <div class="col-lg-4">
  <div class="title-action"  style="color: white;">
    <%= link_to 'New Customer', new_customer_path, :class =>"btn btn-primary" %>
  </div>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      
      <div class="ibox-content">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Lastname<rial/th>
              <th>Email</th>
              <th>Cell phone</th>
              <th>Phone</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= link_to customer.name, customer, :class=>"client-link" %></td>
                <td><%= link_to customer.lastname, customer, :class=>"client-link" %></td>
                <td><%= link_to customer.email, customer, :class=>"client-link" %></td>
                <td><%= link_to customer.cell_phone, customer, :class=>"client-link" %></td>
                <td><%= link_to customer.phone, customer, :class=>"client-link" %></td>
                <td><%= link_to 'Show', customer %></td>
                <td><%= link_to 'Edit', edit_customer_path(customer), :class=>"btn btn-info " %></td>
                <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


     
    </div>
  
  </div>
