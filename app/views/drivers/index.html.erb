

<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Drivers</h2> 
    <ol class="breadcrumb">
      <li>kjsad</li>
      <li>ada</li>
      <li>sd</li>
    </ol>
  </div>
  <div class="col-lg-4">
  <div class="title-action"  style="color: white;">
    <%= link_to 'New Driver', new_driver_path, :class =>"btn btn-primary" %>
  </div>
  </div>
</div>

<style>
    label{

        display: block;
        float: right;
        margin-bottom: 20px;
        font-weight: 700;
        }
        #DataTables_Table_0_info{
          display: none;
          
        }
</style>

        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>List of Drivers</h5>
                       
                    </div>
                    <div class="ibox-content">

                  <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                      <th>Name</th>
                      <th>Company name</th>
                      <th>Cell phone</th>
                      <th>Phone</th>
                      <th>Website</th>
                      <th>Address</th>
                      <th>Number of trucks</th>
                      <th>Non runners</th>
                      <th colspan=""></th>
                    </tr>
                    </thead>

                     <tbody>
                        <% @drivers.each do |driver| %>
                          <tr>
                            <td><%= link_to driver.name, driver %></td>
                            <td><%= link_to driver.company_name, driver %></td>
                            <td><%= link_to driver.cell_phone, driver %></td>
                            <td><%= link_to driver.phone, driver %></td>
                            <td><%= link_to driver.website, driver %></td>
                            <td><%= link_to driver.address, driver %></td>
                            <td><%= link_to driver.number_of_trucks, driver %></td>
                            <td><%= driver.non_runners %></td>
                            
                            <td><%= link_to 'Delete', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    <tfoot>
                    <tr>
                        <th>Name</th>
                          <th>Company name</th>
                          <th>Cell phone</th>
                          <th>Phone</th>
                          <th>Website</th>
                          <th>Address</th>
                          <th>Number of trucks</th>
                          <th>Non runners</th>
                    </tr>
                    </tfoot>
                    </table>
                        </div>

                    </div>
                </div>
            </div>
            </div>
        </div>

         <script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'Hola', header: true},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });

        });

    </script>